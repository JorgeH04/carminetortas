<% include ../partials/_header %>




<div class="col-md-4 mx-auto" style="margin-top:10%;">

  <div class="card">
    <div class="card-header">
      <h3>Elija su color y talle</h3>
    </div>
    <div class="card-body">
      <form action="/ofertauno/tallecolor/<%= ofertauno._id %>" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
           <label style="text-decoration: underline">Talles en stock</label>:  <%= ofertauno.tallestock %>
          <input type="text" name="talle" class="form-control" />
        </div>
        <div class="form-group">
          <label style="text-decoration: underline">Colores en stock:</label>  <%= ofertauno.colorstock %>
          <input type="text" name="color" class="form-control" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>







